{% doc %}
  @prompt
    Create a 50/50 image and text block with no margins or padding. Left side should display a product image of a woman sleeping with a white noise machine. Right side should have a headline "Uninterrupted sleep at the touch of a button" and a green call-to-action button "Shop SNOOZ White Noise Machine". The layout should be responsive and maintain the 50/50 split on desktop with the image and text sections flush against each other with no spacing., keep a option that i can use color scheme that i created before
    

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-split-section-{{ ai_gen_id }} {
    display: flex;
    width: 100%;
    min-height: 400px;
  }

  .ai-split-section__image-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    overflow: hidden;
  }

  .ai-split-section__image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-split-section__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-split-section__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-split-section__content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: {{ block.settings.text_alignment }};
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-split-section__headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    margin: 0 0 {{ block.settings.spacing_below_headline }}px 0;
    line-height: 1.2;
  }

  .ai-split-section__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  @media screen and (max-width: 768px) {
    .ai-split-section-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      min-height: auto;
    }

    .ai-split-section__image-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_image_height }}px;
    }

    .ai-split-section__content-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_content_padding }}px;
    }

    .ai-split-section__headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_headline_size }}px;
    }
  }
{% endstyle %}

<div class="ai-split-section-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}" {{ block.shopify_attributes }}>
  <div class="ai-split-section__image-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 1000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
      >
    {% else %}
      <div class="ai-split-section__image-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  <div class="ai-split-section__content-{{ ai_gen_id }}">
    {% if block.settings.headline != blank %}
      <h2 class="ai-split-section__headline-{{ ai_gen_id }}">
        {{ block.settings.headline }}
      </h2>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a
        href="{{ block.settings.button_link }}"
        class="ai-split-section__button-{{ ai_gen_id }} button button--{{ block.settings.button_style }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

